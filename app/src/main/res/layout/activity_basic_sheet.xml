            android:layout_height="@dimen/SizeStatLayout"
            android:layout_marginLeft="@dimen/SingleStatMarginLeft"
            android:layout_marginTop="@dimen/SingleStatMarginTop"
            android:layout_marginBottom="@dimen/SingleStatMarginBottom"
