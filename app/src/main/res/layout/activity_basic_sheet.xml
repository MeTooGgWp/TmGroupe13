                android:textAlignment="center"
                android:textSize="@dimen/StatisticsTitleTextSize" />

            <TextView
                android:id="@+id/tv_dext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_dext_mod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ModifierMarginTop"
                android:text="TextView"
                android:textAlignment="center"
