            <TextView
                android:id="@+id/tv_wisd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_wisd_mod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ModifierMarginTop"
                android:text="TextView"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/CharLayout"
            android:layout_width="@dimen/SingleStatLayoutWidth"
