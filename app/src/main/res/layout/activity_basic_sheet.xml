        <CheckBox
            android:id="@+id/cb_relegion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/SizeBetweenCheckBoxes"
            android:textSize="@dimen/texteSizeDefault"
            android:text="Religion" />

        <CheckBox
            android:id="@+id/cb_representation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/SizeBetweenCheckBoxes"
            android:textSize="@dimen/texteSizeDefault"
            android:text="Représentation" />

        <CheckBox
            android:id="@+id/cb_survie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/SizeBetweenCheckBoxes"
