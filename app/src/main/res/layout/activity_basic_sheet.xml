        <CheckBox
            android:id="@+id/cb_charSave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/SizeBetweenCheckBoxes"
            android:textSize="@dimen/texteSizeDefault"
            android:text="Charisme" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/texteSizeDefault"
            android:textAlignment="center"
            android:text="Jet de sauvegarde" />


    </LinearLayout>

