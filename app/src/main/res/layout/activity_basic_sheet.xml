            android:textAlignment="center"
            android:textSize="@dimen/texteSizeDefault" />

        <TextView
            android:id="@+id/tv_masteryBonusTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Bonus de maitrise"
            android:textAlignment="center"
            android:textSize="@dimen/texteSizeDefault" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SauvegardeLayout"
        android:layout_width="@dimen/UpperLeftInfoRectWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="@+id/MasteryBonusLayout"
        app:layout_constraintStart_toStartOf="@+id/MasteryBonusLayout"
        app:layout_constraintTop_toBottomOf="@+id/MasteryBonusLayout">

        <CheckBox
            android:id="@+id/cb_forceSave"
            android:layout_width="match_parent"
