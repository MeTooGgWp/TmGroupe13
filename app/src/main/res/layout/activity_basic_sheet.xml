            <TextView
                android:id="@+id/tv_classe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_niveau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/CharacterInfoLayoutHeightDemi"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_race"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_exp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/CaLayout"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/MasteryBonusLayout"
        app:layout_constraintStart_toEndOf="@+id/inspirationLayout"
        app:layout_constraintTop_toTopOf="@+id/inspirationLayout">

        <TextView
            android:id="@+id/tv_ca"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_caTitle"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="CA"
            android:textAlignment="center"
            android:textSize="@dimen/TextSizeBasicInfo" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/vitLayout"
        android:layout_width="49dp"
        android:layout_height="45dp"
