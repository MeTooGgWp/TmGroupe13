            android:id="@+id/tv_vit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_vitTitle"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="Vitesse"
            android:textAlignment="center"
            android:textSize="@dimen/TextSizeBasicInfo" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/initativeLayout"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/CaLayout"
        app:layout_constraintStart_toEndOf="@+id/CaLayout"
        app:layout_constraintTop_toTopOf="@+id/CaLayout">


        <TextView
            android:id="@+id/tv_init"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView"
            android:textAlignment="center" />

