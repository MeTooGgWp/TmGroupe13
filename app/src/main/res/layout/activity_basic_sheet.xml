            android:layout_height="@dimen/SizeBetweenCheckBoxes"
            android:textSize="@dimen/texteSizeDefault"
            android:text="Force" />

        <CheckBox
            android:id="@+id/cb_dextSave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/SizeBetweenCheckBoxes"
            android:textSize="@dimen/texteSizeDefault"
            android:text="Dextérité" />

        <CheckBox
            android:id="@+id/cb_constSave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/SizeBetweenCheckBoxes"
