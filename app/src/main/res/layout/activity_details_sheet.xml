<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsSheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_allies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="allies et organisation" />

        <Button
            android:id="@+id/btn_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age" />

        <Button
            android:id="@+id/btn_apparence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apparence" />

        <Button
            android:id="@+id/btn_Backstory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Backstory" />

        <Button
            android:id="@+id/btn_capacite_et_traits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacité et trait" />

        <Button
            android:id="@+id/btn_defaut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defauts" />

        <Button
            android:id="@+id/btn_equipement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipement" />

        <Button
            android:id="@+id/btn_historique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historique" />

        <Button
            android:id="@+id/btn_ideaux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ideaux" />

        <Button
            android:id="@+id/btn_liens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liens" />

        <Button
            android:id="@+id/btn_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note" />

        <Button
            android:id="@+id/btn_traitsPerso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Traits et personalités" />

        <Button
            android:id="@+id/btn_sorts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sorts" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>