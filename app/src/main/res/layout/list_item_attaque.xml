<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_attaqueName"
        android:layout_width="@dimen/attaqueNameTvWidth"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Attaque name"
        android:textSize="@dimen/texteSizeDefault"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_attaque_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Bonus attaque"
        android:textSize="@dimen/texteSizeDefault"
        app:layout_constraintBottom_toBottomOf="@+id/tv_attaqueName"
        app:layout_constraintStart_toEndOf="@+id/tv_attaqueName"
        app:layout_constraintTop_toTopOf="@+id/tv_attaqueName"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_damage"
        android:layout_width="@dimen/AttackBtnWidth"
        android:layout_height="@dimen/AttackBtnHeight"
        android:layout_marginStart="8dp"
        android:text="Attque dmg"
        android:textSize="@dimen/texteSizeDefault"
        app:layout_constraintBottom_toBottomOf="@+id/tv_attaque_type"
        app:layout_constraintStart_toEndOf="@+id/tv_attaque_type"
        app:layout_constraintTop_toTopOf="@+id/tv_attaque_type" />

    <TextView
        android:id="@+id/tv_attaque_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="type attaque"
        android:textSize="@dimen/texteSizeDefault"
        app:layout_constraintBottom_toBottomOf="@+id/tv_attaque_bonus"
        app:layout_constraintStart_toEndOf="@+id/tv_attaque_bonus"
        app:layout_constraintTop_toTopOf="@+id/tv_attaque_bonus" />
</androidx.constraintlayout.widget.ConstraintLayout>